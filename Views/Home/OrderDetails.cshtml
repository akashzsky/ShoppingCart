
@{
    ViewBag.Title = "OrderDetails";
}

<div class="container">
    <div class="row">
        <div class="col-sm-1"></div>
        
        <div class="col-sm-10">
            <div class="panel panel-info">
                <div class="panel-heading" style="text-align:center">
                    <font color="black"><h3>Order Details<br /></h3></font>
                    <strong>
                        <p style="text-align:center;color:orangered">a 
                            Congrats!<br />
                        </p>
                        <p>
                            Your Order has been placed and will be delivered within 2 days.<br />
                        </p>
                    </strong>

                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-2">
                           
                        </div>
                        <div class="col-sm-8">
                            <strong>
                                Order No: #@ViewBag.OrderNo<br />

                                Order Time: @ViewBag.OrderTime
                                <br />
                                Order Total: ₹@ViewBag.OrderTotal<br />
                            </strong>
                            
                            <br />
                            <hr />
                            <strong>  Delivery Address: @ViewBag.Address</strong> 
                        </div>
                        <div class="col-sm-2">
                         
                        </div>

                    </div>

                </div>
                <div class="panel-footer">
                    @ViewBag.email

                </div>

            </div>
        </div>

        <div class="col-sm-1"></div>

    </div>

</div>

