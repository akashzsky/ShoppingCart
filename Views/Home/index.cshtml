@model IEnumerable<ShoppingKart.Models.Product>

@{
    ViewBag.Title = "Welcome";
   // ViewBag.Title = "pagenation";
    var Next = ViewBag.Currpage + 1;
    var Prev = ViewBag.Currpage - 1;
}
